<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:cxf="http://cxf.apache.org/core"
		xmlns:jaxrs="http://cxf.apache.org/jaxrs"
		xsi:schemaLocation="
						http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						http://cxf.apache.org/core
 						http://cxf.apache.org/schemas/core.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-4.0.xsd
						http://cxf.apache.org/jaxrs
						http://cxf.apache.org/schemas/jaxrs.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />

	<bean id="kmeProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="singleton" value="true" />
		<property name="ignoreResourceNotFound" value="true" />
		<property name="locations">
			<list>
				<value>classpath:test.config.properties</value>
			</list>
		</property>
	</bean>

	<context:property-placeholder
			order="1"
			properties-ref="kmeProperties"
			ignore-unresolvable="false"
			system-properties-mode="OVERRIDE" />

	<cxf:bus>
		<cxf:features>
			<cxf:logging />
		</cxf:features>
	</cxf:bus>

	<bean id="jackonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider">
	</bean>

	<jaxrs:client id="senderService"
				  serviceClass="org.kuali.mobility.push.service.SenderService"
				  address="${push.services.url}/sender-api"
				  inheritHeaders="true">

		<jaxrs:providers>
			<ref bean="jackonProvider" />
		</jaxrs:providers>
		<jaxrs:headers>
			<entry key="Accept" value="application/xml"/>
			<entry key="Content-Type" value="application/xml"/>
		</jaxrs:headers>
	</jaxrs:client>

</beans>
